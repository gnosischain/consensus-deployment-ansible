apiVersion: 1

datasources:
  - name: Prometheus
    type: prometheus
    access: proxy
    url: "http://{{hostvars[groups['prometheus'][0]].ansible_host}}:{{prometheus_http_listen_port}}"
    uid: "prometheus_ds_1"
    isDefault: true

  - name: Loki
    type: loki
    url: "http://{{hostvars[groups['grafana'][0]].ansible_host}}:{{grafana_loki_http_port}}"
    uid: "loki_ds_1"
